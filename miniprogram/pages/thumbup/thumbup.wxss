.whole{
  background:rgba(249,249,249,1);
}
.nav{
  display: flex;
  align-items:center;
  background:rgba(255,255,255,1);
}
.nav_item{
  padding: 10rpx 0rpx;
  margin-left: 70rpx;

  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(156,162,187,1);
  display: inline-block;
}
.nav_item.active{
  font-size:34rpx;
  font-family:PingFang-SC-Bold;
  color:rgba(59,73,224,1);
  border-bottom: 5rpx solid rgba(59,73,224,1);
}

.record{
  width: 100%;
  height: auto;
  padding: 30rpx 0rpx;
  margin-bottom: 30rpx;
  background:rgba(255,255,255,1);
  display: flex;
  flex-direction: column;
}
.blank{
  padding: 100rpx 50rpx;
  background:rgba(255,255,255,1);
}
.blank image{
  height: 700rpx;
}
.record_top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.time_area{
  width: 280rpx;
  height:60rpx;
  background:rgba(59,73,224,1);
  border-radius:0rpx 30rpx 30rpx 0rpx;

  font-size:24rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  text-align: center;
  line-height: 58rpx;
  color:rgba(255,255,255,1);
  position: relative;
}
.date_area{
  width:173rpx;
  height:60rpx;
  background:rgba(59,73,224,1);
  border-radius:0rpx 30rpx 30rpx 0rpx;

  font-size:24rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  text-align: center;
  line-height: 58rpx;
  color:rgba(255,255,255,1);
}
.pink_dot{
  width: 16rpx;
  height: 16rpx;
  background:rgba(222,94,231,1);
  border-radius:50%;
  position: absolute;
  right: 16rpx;
  top: -8rpx;
}
.deletebtn{
  width:136rpx;
  height:40rpx;
  margin-right: 30rpx;
  border:1rpx solid rgba(59,73,224,1);
  border-radius:20px;

  text-align: center;
  font-size:30rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(59,73,224,1);
  line-height:40rpx;
}
.comments{
  padding: 20rpx 30rpx;
}
.comments_nick{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(59,73,224,1);
}
.thumbup_nick{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(59,73,224,1);
}
.thumbup_nick text{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.comments_content{
  margin-top: 20rpx;
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:44rpx;
}
.comments_content text{
  color: rgb(196, 196, 196);
}
.myholetree{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  margin: 0rpx 30rpx;
  background:rgba(249,249,249,1);
}
.holetree_img{
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
}
.comments_block{
  display: flex;
  flex-direction: column;
  
}
.holetree_content{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:44rpx;
}
.has_img_holetree_content{
  width: 460rpx;
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:44rpx;
}
