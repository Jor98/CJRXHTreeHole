.comment-container {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #fff;
}

.user-date-container {
  display: flex;
  flex-direction: row;
  margin: 10rpx 20rpx 0rpx 20rpx;
  justify-content: space-between;
  align-items: center;
}

.user{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin-right: 10rpx;

}

.date{
  font-size: 20rpx;
  font-weight: 400;
}

.content {
  margin-left: 118rpx;
  margin-right: 10rpx;
  font-weight: 300;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.delete{
  font-size: 30rpx;
  color: #3B49E0;
  text-align: right;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
